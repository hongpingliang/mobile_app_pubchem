<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:paddingLeft="5dip" android:paddingTop="3dip"
	android:paddingBottom="8dip" android:orientation="vertical"
	android:background="@color/white" android:textColor="@color/black">

	<LinearLayout android:id="@+id/my_search_row_layout"
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:orientation="vertical" android:background="@color/white">

		<TextView android:id="@+id/my_search_row_term"
			android:layout_width="wrap_content" android:text="colon cancer"
			android:layout_height="wrap_content" android:textSize="16sp"
			android:textColor="@color/black"
			android:layout_gravity="center_vertical" />

		<TextView android:id="@+id/my_search_row_create_date"
			android:layout_width="wrap_content" android:textColor="@color/black"
			android:paddingLeft="15dip" android:text="2008 - 2009"
			android:layout_height="wrap_content" android:textSize="13sp" />

		<TextView android:id="@+id/my_search_row_stereo_chirality"
			android:layout_width="wrap_content" android:textColor="@color/black"
			android:paddingLeft="15dip" android:text="No chiral centers"
			android:layout_height="wrap_content" android:textSize="13sp" />

		<TextView android:id="@+id/my_search_row_stereo_ez"
			android:layout_width="wrap_content" android:textColor="@color/black"
			android:paddingLeft="15dip" android:text="No E/Z centers"
			android:layout_height="wrap_content" android:textSize="13sp" />

		<TextView android:id="@+id/my_search_row_bioassay"
			android:layout_width="wrap_content" android:textColor="@color/black"
			android:paddingLeft="15dip" android:text="Probe"
			android:layout_height="wrap_content" android:textSize="13sp" />

		<TextView android:id="@+id/my_search_row_element"
			android:layout_width="wrap_content" android:textColor="@color/black"
			android:paddingLeft="15dip" android:text="Element: C"
			android:layout_height="wrap_content" android:textSize="13sp" />


		<TextView android:id="@+id/my_search_row_chem_property"
			android:layout_width="wrap_content" android:textColor="@color/black"
			android:paddingLeft="15dip" android:text="MolecularWeight: 2 - 30.4"
			android:layout_height="wrap_content" android:textSize="13sp" />

		<LinearLayout android:layout_width="fill_parent"
			android:layout_height="wrap_content">

			<TextView android:id="@+id/my_search_row_result"
				android:layout_width="wrap_content" android:textColor="@color/gray"
				android:paddingLeft="5dip" android:text="Result"
				android:layout_height="wrap_content" android:textSize="13sp" />

			<View android:layout_width="0dip"
				android:layout_height="0dip" android:layout_weight="1" />

			<TextView android:id="@+id/my_search_row_time"
				android:paddingLeft="5dip" android:paddingRight="10dip"
				android:textColor="@color/gray" android:layout_width="wrap_content"
				android:text="12/02/2001 12:34:33"
				android:layout_height="wrap_content" android:textSize="10sp" />
		</LinearLayout>

		<LinearLayout android:layout_width="fill_parent"
			android:paddingTop="8dip" android:layout_height="wrap_content">

			<ImageButton android:id="@+id/my_search_row_button_run"
				android:src="@drawable/my_search_row_run"
				android:paddingLeft="14dip" android:text="@string/run"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_vertical" />

			<View android:layout_width="0dip"
				android:layout_height="0dip" android:layout_weight="1" />

			<CheckBox android:id="@+id/my_search_row_checkbox"
				android:text="" android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:paddingRight="10dip"
				android:layout_gravity="bottom" />

		</LinearLayout>

	</LinearLayout>

	<TextView android:visibility="gone"
		android:layout_alignParentRight="true" android:paddingTop="5dip"
		android:paddingRight="10dip" android:id="@+id/my_search_row_and"
		android:layout_width="wrap_content" android:textColor="@color/gray"
		android:paddingLeft="5dip" android:text="all field"
		android:layout_height="wrap_content" android:textSize="11sp" />



</RelativeLayout>
